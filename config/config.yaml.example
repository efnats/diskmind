# diskmind configuration

hosts:
  - push:192.168.1.10
  - ssh:root@192.168.1.20
  # - push:192.168.1.30

ssh:
  timeout: 30

database:
  path: ./data/diskmind.db
  retention_days: 365

# Threshold preset: backblaze, conservative, relaxed, custom
threshold_preset: backblaze
delta_preset: 7d

# Rate limit for /api/ingest (push requests)
# Set max_requests to 0 to disable
rate_limit:
  max_requests: 10
  window_seconds: 60

push_token: changeme

# Alert Panel settings
panel:
  alert_retention_days: 7
  alert_sound: warning

# Push notification settings
# All alerts appear in the Alert Panel. Webhook sends only alerts >= min_severity.
notifications:
  min_severity: warning
  cooldown_minutes: 15
  include_recovery: false

# Webhook URLs â€” each receives HTTP POST (JSON) for alerts.
# Prefix with service type: ntfy:, gotify:, or generic (no prefix).
# Works with Gotify, ntfy, Slack, Discord, etc.
webhook_urls:
  # - ntfy:https://ntfy.example.com/diskmind
  # - gotify:https://gotify.example.com/message?token=xxx
  # - https://hooks.slack.com/services/xxx/yyy/zzz
